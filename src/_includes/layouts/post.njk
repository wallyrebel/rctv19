---
layout: layouts/base.njk
---
<!-- NewsArticle Structured Data for SEO -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "NewsArticle",
  "headline": "{{ title }}",
  "description": "{{ excerpt or (content | excerpt) }}",
  "image": "{{ site.url }}{{ featuredImage or '/assets/img/rctv19-logo.jpg' }}",
  "datePublished": "{{ date | dateISO }}",
  "dateModified": "{{ date | dateISO }}",
  "author": {
    "@type": "Organization",
    "name": "{{ site.title }}",
    "url": "{{ site.url }}"
  },
  "publisher": {
    "@type": "Organization",
    "name": "{{ site.title }}",
    "logo": {
      "@type": "ImageObject",
      "url": "{{ site.url }}/assets/img/rctv19-logo.jpg"
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{ site.url }}{{ page.url }}"
  },
  "isAccessibleForFree": true
}
</script>

<article class="container" itemscope itemtype="https://schema.org/NewsArticle">
  <header class="post-header">
    <div class="post-meta">
      <time datetime="{{ date | dateISO }}" itemprop="datePublished">{{ date | dateDisplay }}</time>
    </div>
    <h1 class="post-title" itemprop="headline">{{ title }}</h1>
  </header>
  
  {% if featuredImage %}
  <div class="post-featured-image">
    <img 
      src="{{ featuredImage }}" 
      alt="{{ title }}"
      loading="lazy"
      width="900"
      height="506"
    >
  </div>
  {% endif %}
  
  <div class="post-content">
    {{ content | safe }}
  </div>
  
  {% include "components/share-links.njk" %}
  
  <!-- Related Posts -->
  {% set relatedPosts = collections.posts | shuffle | limit(3) %}
  {% if relatedPosts.length > 0 %}
  <section class="related-posts">
    <div class="section-header">
      <h2 class="section-title">Related Stories</h2>
    </div>
    <div class="related-posts-grid">
      {% for post in relatedPosts %}
        {% if post.url != page.url %}
          {% include "components/post-card.njk" %}
        {% endif %}
      {% endfor %}
    </div>
  </section>
  {% endif %}
</article>
