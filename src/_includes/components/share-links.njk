{#
  Share Links Component
  Displays social sharing buttons for the current page
#}
{% set shareUrl = site.url + page.url %}
{% set shareTitle = title | urlencode %}
{% set shareText = (description or excerpt or site.description) | urlencode %}

<div class="share-links">
  <span class="share-label">Share this story:</span>
  
  <!-- Facebook -->
  <a 
    href="https://www.facebook.com/sharer/sharer.php?u={{ shareUrl }}" 
    class="share-button" 
    target="_blank" 
    rel="noopener"
    aria-label="Share on Facebook"
  >
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
      <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
    </svg>
  </a>
  
  <!-- Twitter/X -->
  <a 
    href="https://twitter.com/intent/tweet?url={{ shareUrl }}&text={{ shareTitle }}" 
    class="share-button" 
    target="_blank" 
    rel="noopener"
    aria-label="Share on Twitter/X"
  >
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
    </svg>
  </a>
  
  <!-- Email -->
  <a 
    href="mailto:?subject={{ shareTitle }}&body=Check out this article: {{ shareUrl }}" 
    class="share-button"
    aria-label="Share via Email"
  >
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
      <path d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z"/>
      <path d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z"/>
    </svg>
  </a>
</div>
